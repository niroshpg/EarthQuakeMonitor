<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            tools:context="com.niroshpg.android.earthquakemonitor.ListViewFragment"
            android:layout_weight="3">
        <ListView
            style="@style/QuakesListStyle"
            android:id="@+id/list_view_quakes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:divider="@null" />
        </FrameLayout>
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/map_fragment_container">
    </FrameLayout>
    <FrameLayout
        android:id="@+id/detail_text_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        tools:context="com.niroshpg.android.earthquakemonitor.DetailActivity"
        tools:ignore="MergeRootFrame"
        android:layout_weight="3"
        android:layout_gravity="left">
    </FrameLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/detail_map_container"
        android:layout_weight="4"
        android:layout_gravity="right"></FrameLayout>
    </LinearLayout>

